@model IEnumerable<WebEve.Models.Item>

@{
    ViewBag.Title = "Index";
}
<script src="@Url.Content("~/Scripts/ItemAutoComplete.js")" type="text/javascript"></script>
<h2>Index</h2>

<p>
    <label> Item : </label>
    <input id="ItemSearch" />
    <input type='button' onclick='AddItem()' value='Add'/>
    <input type='hidden' id='itemId' />
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <thead>
        <tr>
            <th>
                ApiId
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
<tbody id="ItemList">
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApiId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</tbody>


</table>
