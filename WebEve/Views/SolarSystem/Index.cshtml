@model IEnumerable<WebEve.Models.SolarSystem>

@{
    ViewBag.Title = "Index";
}
<script src="@Url.Content("~/Scripts/SystemAutoComplete.js")" type="text/javascript"></script>
<h2>Index</h2>

<p>
    <label> Solar System : </label>
    <input id="SystemSearch" />
    <input type='button' onclick='AddSystem()' value='Add'/>
    <input type='hidden' id='systemId' />
</p>
<table>
    <thead>
        <tr>
            <th>
                ApiId
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
<tbody id="SystemList">
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApiId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</tbody>
</table>
